<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="“All life is an experiment. The more experiments you make the better.” —Ralph Waldo Emerson"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.varunest.sparkbutton.SparkButton
            android:id="@+id/button_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_quote"
            app:sparkbutton_activeImage="@drawable/ic_like_black_24dp"
            app:sparkbutton_iconSize="25dp"
            app:sparkbutton_inActiveImage="@drawable/ic_unlike_black_24dp"
            />

        <com.varunest.sparkbutton.SparkButton
            android:id="@+id/button_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/button_like"
            app:layout_constraintRight_toLeftOf="@+id/button_like"
            app:layout_constraintTop_toTopOf="@+id/button_like"
            app:sparkbutton_activeImage="@drawable/ic_star_fill_24dp"
            app:sparkbutton_iconSize="30dp"
            app:sparkbutton_inActiveImage="@drawable/ic_star_empty_24dp"
            />
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>