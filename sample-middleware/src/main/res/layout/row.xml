<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="“All life is an experiment. The more experiments you make the better.” —Ralph Waldo Emerson"
            android:textSize="20sp"
            />

        <com.varunest.sparkbutton.SparkButton
            android:id="@+id/button_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_quote"
            android:layout_toLeftOf="@+id/button_star"
            android:layout_toStartOf="@+id/button_star"
            app:sparkbutton_activeImage="@drawable/ic_like_black_24dp"
            app:sparkbutton_iconSize="25dp"
            app:sparkbutton_inActiveImage="@drawable/ic_unlike_black_24dp"
            />

        <com.varunest.sparkbutton.SparkButton
            android:id="@+id/button_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView_quote"
            app:sparkbutton_activeImage="@drawable/ic_star_fill_24dp"
            app:sparkbutton_iconSize="25dp"
            app:sparkbutton_inActiveImage="@drawable/ic_star_empty_24dp"
            />
    </RelativeLayout>


</android.support.v7.widget.CardView>